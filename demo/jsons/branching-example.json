{
  "start": "first_step",
  "steps": {
    "first_step": {
      "type": "dynamic_view",
      "view": "views/simple-decider-view",
      "next": {
        "dependency":[
          {
            "criteria": "nextScreen",
            "condition":"==",
            "value":"hello-world",
            "id":"first-screen-step"
          },
          {
            "criteria": "nextScreen",
            "condition":"!=",
            "value":"hello-world",
            "id":"second-screen-step"
          }
        ]
      }
    },
    "first-screen-step": {
      "type": "static_view",
      "template": "hello-world"
    },
    "second-screen-step": {
      "type": "static_view",
      "template": "second-screen"
    }
  }
}